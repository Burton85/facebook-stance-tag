{
    "manifest_version": 3,
    "name": "Facebook Stance Tag",
    "version": "1.0",
    "description": "A Chrome extension to tag Facebook posts with stances",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*.facebook.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}